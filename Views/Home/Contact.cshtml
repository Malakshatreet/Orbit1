@model ContactUs

<!-- Contact Form Section (Overlapping) -->
<div class="container form-container-overlap">
    <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="300">
        <div class="col-lg-10">
            <div class="contact-form-wrapper">
                <h2 class="text-center mb-4">Share Your Experience</h2>
               
                <h6 class="text-center mb-4">
                    We’d love to hear your feedback and experience with us
                </h6>
               


                <form asp-action="SaveContact" method="post" >

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="input-with-icon">
                                    <i class="bi bi-person"></i>
                                    <input type="text" asp-for="Name" class="form-control"  placeholder="First Name" required="">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="input-with-icon">
                                    <i class="bi bi-envelope"></i>
                                    <input type="email" class="form-control" asp-for="Email" placeholder="Email Address" required="">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="input-with-icon">
                                    <i class="bi bi-text-left"></i>
                                    <input type="text" class="form-control" asp-for="Subject" placeholder="Event name" required="">
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <div class="input-with-icon">
                                    <i class="bi bi-chat-dots message-icon"></i>
                                    <textarea class="form-control" asp-for="Message" placeholder="Write about your experience..." style="height: 180px" required=""></textarea>
                                </div>
                            </div>
                        </div>

                       

                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-primary btn-submit">Submit Feedback</button>

                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>

</div>




</section><!-- /Contact Section -->